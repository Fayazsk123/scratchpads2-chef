[Unit]
Description="M/Monit system monitoring"

[Service]
ExecStartPre=<%= node["mmonit"]["dir"] %>/bin/mmonit -c <%= node['mmonit']['dir'] %>/conf/server.xml -r <%= node['mmonit']['dir'] %> -t
ExecStart=<%= node["mmonit"]["dir"] %>/bin/mmonit -c <%= node['mmonit']['dir'] %>/conf/server.xml -r <%= node['mmonit']['dir'] %> -p /var/run -i start

[Install]
WantedBy=multi-user.target
