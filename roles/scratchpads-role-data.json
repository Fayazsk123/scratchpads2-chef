{
  "name": "scratchpads-role-data",
  "default_attributes": {
    "chef_client": {
      "init_style": "systemd"
    },
    "gkrellmd": {
      "allowed_hosts": [
        "157.140.126.246",
        "monkey.nhm.ac.uk"
      ]
    },
    "memcached": {
      "max_object_size": "3M",
      "memory": 4000
    },
    "percona": {
      "use_percona_repos": false,
      "apt_keyserver": "keyserver.ubuntu.com",
      "server": {
        "bind_address": "",
        "innodb_log_file_size": "100M",
        "group_concat_max_len": "4294967295",
        "innodb_file_format": "Barracuda",
        "max_connections": "101"
      },
      "conf": {
        "mysqld": {
          "innodb_large_prefix": 1,
          "max_user_connections": 20
        }
      }
    }
  },
  "override_attributes": {
    "percona": {
      "encrypted_data_bag_secret_file": "/vagrant/.chef/encrypted_data_bag_secret"
    },
    "postfix": {
      "relayhost_role": "scratchpads-role-control"
    }
  },
  "run_list": [
    "recipe[scratchpads]",
    "recipe[scratchpads::aegir]",
    "recipe[scratchpads::percona-server]",
    "recipe[scratchpads::postfix]",
    "recipe[memcached]"
  ]
}