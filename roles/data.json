{
  "name": "data",
  "default_attributes": {
    "chef_client": {
      "init_style": "systemd"
    },
    "gkrellmd": {
      "allowed_hosts": [
        "157.140.126.246",
        "monkey.nhm.ac.uk"
      ]
    },
    "memcached": {
      "max_object_size": "3M",
      "memory": 4000
    },
    "percona": {
      "use_percona_repos": false,
      "apt_keyserver": "keyserver.ubuntu.com",
      "server": {
        "bind_address": ""
      }
    }
  },
  "override_attributes": {
    "percona": {
      "encrypted_data_bag_secret_file": "/vagrant/.chef/encrypted_data_bag_secret"
    },
    "postfix": {
      "relayhost_role": "control"
    }
  },
  "run_list": [
    "recipe[scratchpads]",
    "recipe[scratchpads::aegir]",
    "recipe[scratchpads::percona-server]",
    "recipe[scratchpads::postfix]",
    "recipe[scratchpads::monit]",
    "recipe[memcached]"
  ]
}