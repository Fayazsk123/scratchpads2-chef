{
  "json_class": "Chef::Role",
  "name": "control",
  "description": "Main Aegir server role.",
  "default_attributes": {
    "authorization": {
      "sudo": {
        "users": [
          "aegir"
        ],
        "passwordless": true
      }
    },
    "percona": {
      "use_percona_repos": false,
      "apt_keyserver": "hkp://pgp.mit.edu:80",
      "server": {
        "bind_address": ""
      }
    },
    "php": {
      "packages": [
        "php5",
        "php5-cli",
        "php5-curl",
        "php5-gd",
        "php5-mysql",
        "php5-memcache",
        "php-console-table"
      ]
    }
  },
  "override_attributes": {
    "percona": {
      "encrypted_data_bag_secret_file": "/vagrant/.chef/encrypted_data_bag_secret"
    }
  },
  "run_list": [
    "recipe[scratchpads::control]"
  ]
}