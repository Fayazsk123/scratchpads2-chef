{
  "name": "control",
  "description": "Main Aegir server role.",
  "default_attributes": {
    "chef_client": {
      "init_style": "systemd"
    },
    "gkrellmd": {
      "allowed_hosts": [
        "157.140.126.246",
        "monkey.nhm.ac.uk"
      ]
    },
    "percona": {
      "use_percona_repos": false,
      "apt_keyserver": "keyserver.ubuntu.com",
      "server": {
        "bind_address": ""
      }
    },
    "php": {
      "packages": [
        "php5",
        "php5-cli",
        "php5-curl",
        "php5-gd",
        "php5-mysql",
        "php5-memcache",
        "php-console-table"
      ],
      "directives": {
        "memory_limit": "512M"
      },
      "conf_dir": "/etc/php5/apache2"
    }
  },
  "override_attributes": {
    "apache": {
      "listen_addresses": [
        "127.0.0.1"
      ]
    },
    "percona": {
      "encrypted_data_bag_secret_file": "/vagrant/.chef/encrypted_data_bag_secret"
    },
    "postfix": {
      "inet-interfaces": "all",
      "mail_type": "master",
      "main": {
        "relayhost": "mailserver.nhm.ac.uk"
      }
    },
    "varnish": {
      "listen_port": "80",
      "conf_source": "default-varnish.erb",
      "conf_cookbook": "scratchpads",
      "vcl_generated": false
    }
  },
  "run_list": [
    "recipe[git]",
    "recipe[imagemagick]",
    "recipe[scratchpads]",
    "recipe[scratchpads::percona-server]",
    "recipe[scratchpads::webserver]",
    "recipe[scratchpads::postfix]",
    "recipe[scratchpads::aegir]",
    "recipe[scratchpads::nfs]",
    "recipe[scratchpads::varnish]",
    "recipe[scratchpads::monit]"
  ]
}